<%- include('include/head.ejs') %>

<body>
    <h1>All Quara Post</h1>
    <div class="container">
        <% for(post of posts){ %>
            <div class="post">
                <h3 class="user">@<%= post.username %>
                </h3>
                <p class="description">
                    <%= post.description %>
                </p>
                <a href="http://localhost:3000/posts/<%=post.id%>">Post details</a>
            </div>
            <% } %>

                <div>
                    <a class="new-post" href="http://localhost:3000/posts/new">New Post</a>
                </div>
    </div>


</body>

</html>